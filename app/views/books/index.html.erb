

<div class="main">
  
<div>
    <%= flash[:notice] %>
</div>
    
  <h1 class="title">Books</h1>
  
  <table class="list"> 
      <thead>
      　　  <tr>
        　      <th style="width:192px;">Title</th>
        　      <th style="width:300px;">Body</th>
        　      <th colspan="3"></th>
        　</tr>
       </thread>
    
       <thbody>
           <% @books.each do |book| %> 
             <tr>
               <td><%= book.title %></td>
               <td><%= book.body %></td>
               <td class="link"><%= link_to 'Show', book %></td>
               <td class="link"><%= link_to 'Edit', edit_book_path(book) %></td>
               <td class="link"><%= link_to 'Destroy', book, method: :delete, data: {confirm:'Are you sure?' }%></td>
             </tr>
          <% end %>
        </thbody>
   </table>
 
   <div class="form">
        <h2 class="title3">New book</h2>
        
        <% if @book.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
        
              <ul>
                <% @book.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        
        <div class="body">
            <%= form_with model: @book do |form| %>
              <div class="field">
                <%= form.label :title, style: "display: block"  %>
                <%= form.text_field :title %>
              </div>
            
              <div class="field">
                <%= form.label :body, style: "display: block"  %>
                <%= form.text_field :body %>
              </div>
            
              <div>
                <%= form.submit 'Create Book', method: :create %>
              </div>
            <% end %>
        </div>
    </div>
    
</div>